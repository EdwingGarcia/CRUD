@model Producto
@{
    ViewData["Title"] = "Lista de Productos";
}

<form method="post">
    <div class="mb-3">
        <label>ID</label>
        <input asp-for="IdProducto" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label>Descripcion</label>
        <input asp-for="Descripcion" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label>Cantidad</label>
        <input asp-for="Cantidad" class="form-control" disabled>

    </div>
    <div>
        <a asp-action="Index" class="btn btn-primary">Regresar</a>
    </div>
</form>