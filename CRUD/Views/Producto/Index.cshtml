@model List<Producto>
@{
    ViewData["Title"] = "Lista de Productos";
}
<p>En esta pagina se muestran productos</p>
<button type="button" onclick="location.href='@Url.Action("Create", "Producto")'">
    Nuevo Producto
</button>

<div>
    <table>
        <thead>
            <tr>
                <th scope="col">IdProducto</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.IdProducto</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Cantidad</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-IdProducto="@producto.IdProducto"><i class="bi bi-trash3"></i></a>
                            <button type="button" class="btn btn-warning"><i class="bi bi-pencil"></i></button>
                            <button type="button" class="btn btn-primary"><i class="bi bi-eye-fill"></i></button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>